KMNAME=kdepim
inherit kde-meta eutils

DESCRIPTION="KDE Notes"
KEYWORDS="~x86"
IUSE=""
DEPEND="~kde-base/libkcal-$PV
	~kde-base/libkdepim-$PV
	~kde-base/kontact-$PV"
